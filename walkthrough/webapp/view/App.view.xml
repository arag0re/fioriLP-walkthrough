<mvc:View
	controllerName="de.icontec.antonstadie.walkthrough.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page
					id="page"
					title="{i18n>title}"
				>
					<Button
						text="Say Hello"
						press=".onShowHello"
					/>
					<Input
						value="{/recipient/name}"
						description="Hello {/recipient/name}"
						valueLiveUpdate="true"
						width="60%"
					/>
					<content/>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>