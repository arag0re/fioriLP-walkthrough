<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Dialog
		id="helloDialog"
		title="Hello {/recipient/name}"
	>
		<beginButton>
			<Button
				text="{i18n>dialogCloseButtonText}"
				press=".onCloseDialog"
			/>
		</beginButton>
		<FormattedText
			htmlText="Hello {/recipient/name}"
			class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"
		/>
	</Dialog>
</core:FragmentDefinition>